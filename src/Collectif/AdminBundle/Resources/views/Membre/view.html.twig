{% extends 'CollectifAdminBundle::layout.html.twig' %}

{% block title %}Collectif CONFLUENCE{% endblock %}

{% block content %}

<h1>Liste des membres</h1>

<div class="header-buttons">
	<input type="button" class="btn btn-success right" onclick="window.open('{{ path('collectif_membre_create') }}', '_parent');" value="Ajouter un membre">
</div>



<table class="table table-hover">
	<tr>
		<th>Editer</th>
		<th>Nom</th>
		<th>Prénom</th>
		<th>Domaine</th>
		<th>Actif</th>
		<th>Supprimer</th>
	</tr>


{% for m in membres %}
	<tr>
<td><a class="btn" href="{{ path('collectif_membre_edit', { 'id': m.id }) }}"><i class="icon-edit"></i></a></td>
<td>{{ m.nom }}</td>
<td>{{ m.prenom }}</td>
<td></td>
<td>{% if m.actif %}
		<i class="icon-ok"></i>
	{% else %}
		<i class="icon-remove"></i>
	{% endif %}	
</td>
<td><a onclick="if(!confirm('Voulez-vous vraiment supprimer ce membre ?')) { return false };" class="btn" href="{{ path('collectif_membre_delete', { 'id': m.id }) }}"><i class="icon-trash"></i></a></td>

</tr>

{% else %}

	<tr><td>Aucun membre n‚Äôa √©t√© trouv√©.</td></tr>

{% endfor %}

</table>

