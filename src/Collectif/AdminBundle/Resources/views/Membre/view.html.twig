{% extends 'CollectifAdminBundle::layout.html.twig' %}

{% block title %}Collectif CONFLUENCE{% endblock %}

{% block content %}

<h1>Liste des membres</h1>

<div class="header-buttons">
	<a class="pull-right btn btn-success" href="{{ path('collectif_membre_create') }}"><i class="icon-plus-sign icon-white"></i>Ajouter un membre</a>
</div>



<table class="table table-hover">
	<tr>
		<th>Editer</th>
		<th>Nom</th>
		<th>Prénom</th>
		<th>Domaine</th>
		<th>Publications</th>
		<th>Actif</th>
		<th>Supprimer</th>
	</tr>


{% for m in membres %}
	<tr>
<td><a class="btn" href="{{ path('collectif_membre_edit', { 'id': m.id }) }}"><i class="icon-edit"></i></a></td>
<td>{{ m.nom }}</td>
<td>{{ m.prenom }}</td>
<td>
{% if m.domaine == null %}
	<span class="label label-warning">Aucun</span>
{% else %}
	{{ m.domaine.nom }}
{% endif %}
</td>
<td>{{ m.publications | length }}</td>
<td>{% if m.enabled %}
		<span class="label label-success">actif</span>
	{% else %}
		<span class="label label-warning">inactif</span>
	{% endif %}	
</td>
<td><a onclick="if(!confirm('Voulez-vous vraiment supprimer ce membre ?')) { return false };" class="btn btn-danger" href="{{ path('collectif_membre_delete', { 'id': m.id }) }}"><i class="icon-trash icon-white"></i></a></td>

</tr>

{% else %}

	<tr><td>Aucun membre n’a été trouvé.</td></tr>

{% endfor %}

</table>

