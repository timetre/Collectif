{% extends 'CollectifAdminBundle::layout.html.twig' %}

{% block title %}Collectif CONFLUENCE{% endblock %}

{% block content %}

<h3>Activit√© de {{ user.nom }} {{ user.prenom }}</h3>

<table class="table table-hover">
	<tr>
		<th>Description</th>
		<th>Date</th>
	</tr>
{% for log in user.loggers %}
	<tr>
		<td>{{ log.description }}</td>
		<td>{% if log.date != null %}
				{{ log.date|date('d/m/Y H:i:s') }}
			{% endif %}
		</td>
	</tr>
{% endfor %}
</table>
{% endblock %}