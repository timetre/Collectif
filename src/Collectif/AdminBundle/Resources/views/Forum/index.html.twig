    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn" href="{{ path('reseau_forum_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a></td>
            <td>{{ entity.titre }}</td>
            <td>{% if entity.actif %}
					<i class="icon-ok"></i>
				{% else %}
					<i class="icon-remove"></i>
				{% endif %}	
			</td>
            <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('d/m/Y') }}{% endif %}</td>
            <td>
               <a onclick="if(!confirm('Voulez-vous vraiment supprimer ce forum ?')) { return false };" class="btn btn-danger" 
                   href="{{ path('reseau_forum_delete', { 'id': entity.id }) }}"><i class="icon-trash icon-white"></i></a></li>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

