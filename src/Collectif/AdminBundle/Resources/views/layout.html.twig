<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr" lang="fr-FR">
<head profile="http://gmpg.org/xfn/11">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>{% block title %}Collectif CONFLUENCE{% endblock %}</title>
	
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/bootstrap.css') }}" />
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/custom.css') }}" />
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/datepicker.css') }}" />
	
	
</head>
	<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('collectif_front_homepage') }}" target="_blank"><i style="margin-top: 5px;" class="icon-home icon-white"></i>&nbsp;Collectif CONFLUENCE</a>

          <div class="nav-collapse collapse dropdown">
          	
          	<p class="navbar-text pull-right">
              Connecté en tant que <a href="#" class="navbar-link">{{ app.user.username }}</a>
            </p>
          
            <ul class="nav" role="menu" aria-labelledby="dLabel">
            
            	{% if app.request.attributes.get('_route') == 'collectif_back_homepage' %}
	            	<li class="active"><a href="{{ path('collectif_back_homepage') }}">Accueil</a></li>
	            {% else %}
	              	<li><a href="{{ path('collectif_back_homepage') }}">Accueil</a></li>
	            {% endif %}
              
			  
			  {% if app.request.attributes.get('_route') == 'fos_user_profile_show' or app.request.attributes.get('_route') == 'collectif_membre_edit_page' or app.request.attributes.get('_route') == 'collectif_publication_list_own' %}
	            <li class="dropdown active">
	          {% else %}
	         	<li class="dropdown">
	          {% endif %}
			  	<a class="dropdown-toggle" data-toggle="dropdown" href="#">Page personnelle<b class="caret"></b></a>
			  	<ul class="dropdown-menu">
			  		{% if app.request.attributes.get('_route') == 'fos_user_profile_show' %}
	            		<li class="active"><a href="{{ path('fos_user_profile_show') }}">Editer mes infos perso</a></li>
	            	{% else %}
	              		<li><a href="{{ path('fos_user_profile_show') }}">Editer mes infos perso</a></li>
	           	 	{% endif %}
	           	 	{% if app.request.attributes.get('_route') == 'collectif_membre_edit_page' %}
	            		<li class="active"><a href="{{ path('collectif_membre_edit_page', { 'id': app.user.id }) }}">Editer ma page perso</a></li>
	            	{% else %}
	              		<li><a href="{{ path('collectif_membre_edit_page', { 'id': app.user.id }) }}">Editer ma page perso</a></li>
	           	 	{% endif %}
	           	 	{% if app.request.attributes.get('_route') == 'collectif_publication_list_own' %}
	            		<li class="active"><a href="{{ path('collectif_publication_list_own', { 'id': app.user.id }) }}">Mes articles</a></li>
	            	{% else %}
	              		<li><a href="{{ path('collectif_publication_list_own', { 'id': app.user.id }) }}">Mes articles</a></li>
	           	 	{% endif %}
	           	 	{% if app.request.attributes.get('_route') == 'collectif_cv_list' %}
	            		<li class="active"><a href="{{ path('collectif_cv_list') }}">Mon CV</a></li>
	            	{% else %}
	              		<li><a href="{{ path('collectif_cv_list') }}">Mon CV</a></li>
	           	 	{% endif %}
	           	 	{% if app.request.attributes.get('_route') == 'collectif_stat_list' %}
	            		<li class="active"><a href="{{ path('collectif_stat_list') }}">Mes statistiques</a></li>
	            	{% else %}
	              		<li><a href="{{ path('collectif_stat_list') }}">Mes statistiques</a></li>
	           	 	{% endif %}
	          	</ul>
			  </li>
			  
			  {% render url('reseau_forum_nav') %}
			  
			  
			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				<li><a href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
			{% else %}
				<li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
			{% endif %} 
            </ul>

          </div>
        </div>
      </div>
    </div>

	<div class="container-fluid">
		<div class="row-fluid">
			{% if is_granted("ROLE_SUPER_ADMIN") %}
			<div class="span2">
		    	<div class="well sidebar-nav">
		            <ul class="nav nav-list">
		            
		              <li class="nav-header">Menu</li>
		              {% if app.request.attributes.get('_route') == 'collectif_back_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_back_homepage') }}">Accueil</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_back_homepage') }}">Accueil</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'collectif_membre_edit_page' %}
		              	<li class="active"><a href="{{ path('collectif_membre_edit_page', { 'id': app.user.id }) }}">Ma page perso</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_membre_edit_page', { 'id': app.user.id }) }}">Ma page perso</a></li>
		              {% endif %}
		              
		              <li class="nav-header">Contenu</li>
		              {% if app.request.attributes.get('_route') == 'collectif_page_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_page_homepage', { 'parent': 0 }) }}">Pages</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_page_homepage', { 'parent': 0 }) }}">Pages</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'collectif_categories_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_categories_homepage') }}">Catégories</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_categories_homepage') }}">Catégories</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'collectif_articles_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_articles_homepage') }}">Articles</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_articles_homepage') }}">Articles</a></li>
		              {% endif %}
		              
		              
		              <li class="nav-header">Recherche</li>
		              {% if app.request.attributes.get('_route') == 'collectif_domaine_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_domaine_homepage') }}">Domaines</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_domaine_homepage') }}">Domaines</a></li>
		              {% endif %}
		              
					  {% if app.request.attributes.get('_route') == 'collectif_membre_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_membre_homepage') }}">Membres</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_membre_homepage') }}">Membres</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'collectif_publication_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_publication_homepage') }}">Publications</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_publication_homepage') }}">Publications</a></li>
		              {% endif %}
					  				  
					  <li class="nav-header">Utilisateur</li>
		              {% if app.request.attributes.get('_route') == 'collectif_membre_create_admin' %}
		              	<li class="active"><a href="{{ path('collectif_membre_create_admin') }}">Ajouter administrateur</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_membre_create_admin') }}">Ajouter administrateur</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'fos_user_profile_show' %}
		              	<li class="active"><a href="{{ path('fos_user_profile_show') }}">Mes préférences</a></li>
		              {% else %}
		              	<li><a href="{{ path('fos_user_profile_show') }}">Mes préférences</a></li>
		              {% endif %}
					  
					  
					  <li class="nav-header">Paramètres</li>
					  {% if app.request.attributes.get('_route') == 'collectif_parameters_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_parameters_homepage') }}">Site web</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_parameters_homepage') }}">Site web</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'collectif_partenaires_homepage' %}
		              	<li class="active"><a href="{{ path('collectif_partenaires_homepage') }}">Partenaires</a></li>
		              {% else %}
		              	<li><a href="{{ path('collectif_partenaires_homepage') }}">Partenaires</a></li>
		              {% endif %}
					  
					  {% if app.request.attributes.get('_route') == 'reseau_forum' %}
		              	<li class="active"><a href="{{ path('reseau_forum') }}">Forums</a></li>
		              {% else %}
		              	<li><a href="{{ path('reseau_forum') }}">Forums</a></li>
		              {% endif %}
		              
		              {% if app.request.attributes.get('_route') == 'reseau_sousforum' %}
		              	<li class="active"><a href="{{ path('reseau_sousforum') }}">Topics</a></li>
		              {% else %}
		              	<li><a href="{{ path('reseau_sousforum') }}">Topics</a></li>
		              {% endif %}
					  
		            </ul>
		    	</div><!--/.well -->
		    </div>
		    <div class="span10">
		    {% else %}    
			<div class="span12">
			{% endif %}
				<p>
					{% block content %}
					{% endblock %}
				</p>
			</div>
			
		</div>
	</div>
		
	<script src="http://code.jquery.com/jquery-latest.js"></script>
	<script type="text/javascript" src="{{ asset('/bundles/collectifadmin/js/bootstrap.js') }}"></script>
	<script type="text/javascript" src="{{ asset('/bundles/collectifadmin/js/bootstrap-datepicker.js') }}"></script>
	
	
	<script type="text/javascript" src="/bundles/ckfinder/ckeditor/ckeditor.js"></script>
	<script type="text/javascript" src="/bundles/ckfinder/ckfinder.js"></script>
	<script type="text/javascript">
		CKFinder.setupCKEditor( null, '/bundles/ckfinder/' ) ;
	</script>
	
	{#
	{{ tinymce_init() }}
	#}
	<script>		
		$(function() {
	    	$( ".datePicker" ).datepicker({
				format: 'dd/mm/yyyy',
				weekStart: 1
			});
		});
	</script>

	</body>
</html>
