<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr" lang="fr-FR">
<head profile="http://gmpg.org/xfn/11">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>{% block title %}Collectif CONFLUENCE{% endblock %}</title>
	
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/bootstrap.css') }}" />
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/custom.css') }}" />
	<link rel="stylesheet" href="{{ asset('/bundles/collectifadmin/css/login.css') }}" />
  </head>

  <body>
<div class="row">
	<div class="span10">
		<iframe height="600px" width="100%" frameborder="0" scrolling="no" 
		src="{{ asset('/maps/map.html') }}">
    </iframe>
	</div>
	<div class="span5">
	    <div class="container section" id="section1">
			{% for key, message in app.session.getFlashes() %}
	        <div class="{{ key }}">
	            {{ message|trans({}, 'FOSUserBundle') }}
	        </div>
	        {% endfor %}

	        <div class="slidingSpaces">
				<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
					<h2 class="form-signin-heading">Identification</h2>
			        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		
			        <input type="text"  class="input-block-level"  placeholder="Login" id="username" name="_username" value="{{ last_username }}" required="required" />
		
			        <input type="password" class="input-block-level" placeholder="Mot de passe" id="password" name="_password" required="required" />
					
					<label class="checkbox">
					  <input type="checkbox" id="remember_me" name="_remember_me" value="on"> Se souvenir de moi
					</label>
		
			        <input type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit" value="Envoyer" />
			    </form>
			    
			   	<div>
	        		<h2 class="center-title">Pas encore membre ? <a href="#section2" class="goSlide">Rejoignez le réseau Confluence</a></h2>
	        	</div>
	        </div>
		</div>
	</div>
</div>

<div class="row">
	<div class="span3"></div>
	<div class="span9">

    <div class="container section" id="section2">
    
    <div>
    	<h2 class="center-title">Déjà membre ? <a href="#section1" class="goSlide">Identifiez vous</a></h2>
    </div>
    
    <div id="this-carousel-id" class="carousel slide">
	  <div class="carousel-inner">
	    <div class="item active">
	      <img src="{{ asset('/bundles/collectifadmin/images/example/bootstrap-mdo-sfmoma-02.jpg') }}" alt="">
	      <div class="carousel-caption">
	        <p>Caption text here</p>
	      </div>
	    </div>
	    <div class="item">
	      <img src="{{ asset('/bundles/collectifadmin/images/example/bootstrap-mdo-sfmoma-01.jpg') }}" alt="">
	      <div class="carousel-caption">
	        <p>Caption text here</p>
	      </div>
	    </div>
	    <div class="item">
	      <img src="{{ asset('/bundles/collectifadmin/images/example/bootstrap-mdo-sfmoma-03.jpg') }}" alt="">
	      <div class="carousel-caption">
	        <p>Caption text here</p>
	      </div>
	    </div>
	  </div>
    	<a class="carousel-control left" href="#this-carousel-id" data-slide="prev">&lsaquo;</a>
    	<a class="carousel-control right" href="#this-carousel-id" data-slide="next">&rsaquo;</a>
	
	<div>
    	<h2 class="center-title"><a target="_blank" href="{{ path('collectif_membre_register') }}">Adhérez en ligne</a></h2>
    </div>

    </div>
</div>

	<script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript" src="{{ asset('/bundles/collectifadmin/js/jquery.easing.1.3.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/collectifadmin/js/bootstrap.js') }}"></script>
    <script type="text/javascript">
		$(function() {
		    $('a.goSlide').bind('click',function(event){
		        var $anchor = $(this);
		        
		        $('html, body').stop().animate({
		            scrollTop: $($anchor.attr('href')).offset().top - 40
		        }, 1500,'easeInOutExpo');
		       
		        event.preventDefault();
		    });
		});
		
		$(document).ready(function(){
		    $('.carousel').carousel();
		  });
    </script>
	
	</body>
</html>