{% extends 'CollectifAdminBundle::layout.html.twig' %}

{% block title %}Collectif CONFLUENCE{% endblock %}

{% block content %}
    <h1>Album edit</h1>

    {% form_theme edit_form 'CollectifAdminBundle:Form:fields.html.twig' %}

    <form action="{{ path('album_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate class="form-horizontal">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}

        <a href="{{ path('album') }}" class="btn btn-warning">Retour</a>

        <input type="submit" class="btn btn-success" />
               
    </form>

{% endblock %}
